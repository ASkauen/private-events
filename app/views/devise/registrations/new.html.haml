.grid.grid-rows-auto.justify-items-center.mt-10.shadow-card.mx-auto.py-5.rounded-md{class:"w-1/3"}
  %h2{class: "font-bold"} Sign up:
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "px-2 border-2 rounded-md"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "px-2 border-2 rounded-md"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "px-2 border-2 rounded-md"
    .actions
      = f.submit "Sign up", class: "cursor-pointer px-3 py-1 rounded-md mt-2 hover:bg-gray-200"
  = render "devise/shared/links"
